<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragments.MovieDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo"
        android:padding="@dimen/small_margin">
        <TextView
            style="@style/MovieTitleStyle"
            android:id="@+id/movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="@dimen/tiny_margin"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/drawable_favorite_button"
            android:background="@android:color/transparent"
            android:contentDescription="@string/action_favorite"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/small_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/movie_poster"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/image_poster_detail_height"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/movie_placeholder"
                    android:layout_weight="5"/>
                <GridLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/small_margin"
                    android:paddingRight="@dimen/small_margin"
                    android:useDefaultMargins="true"
                    android:layout_weight="7">
                    <ImageView
                        style="@style/LabelIconStyle"
                        android:contentDescription="@string/label_release_date"
                        android:onClick="showContentDescription"
                        android:src="@drawable/ic_today_black_48dp"/>
                    <TextView
                        android:id="@+id/movie_release_date"
                        style="@style/InfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <ImageView
                        style="@style/LabelIconStyle"
                        android:contentDescription="@string/label_popularity"
                        android:onClick="showContentDescription"
                        android:src="@drawable/ic_trending_down_black_48dp"/>
                    <TextView
                        android:id="@+id/movie_popularity"
                        style="@style/InfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"/>
                    <ImageView
                        style="@style/LabelIconStyle"
                        android:contentDescription="@string/label_rating"
                        android:onClick="showContentDescription"
                        android:src="@drawable/ic_star_black_48dp"/>
                    <TextView
                        android:id="@+id/movie_rating"
                        style="@style/InfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </GridLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/movie_synopsis"
                style="@style/InfoStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:lineSpacingMultiplier="1.2"/>
            <ProgressBar
                android:id="@+id/movie_extra_progressbar"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ViewStub
                android:id="@+id/movie_trailer_stub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/layout_movie_trailer"/>
            <ViewStub
                android:id="@+id/movie_review_stub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/layout_movie_review"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
