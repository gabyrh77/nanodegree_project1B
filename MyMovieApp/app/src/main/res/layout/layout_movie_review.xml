<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_margin"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/LabelStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start|center_vertical"
            android:text="@string/label_review"/>
        <Button
            style="@style/MoreStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/more_button" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_first_view"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="vertical">
        <TextView
            style="@style/InfoStyle.Italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:id="@+id/review_content_1"/>
        <TextView
            style="@style/InfoStyle.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/review_author_1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="vertical"
        android:id="@+id/review_second_view">
        <TextView
            style="@style/InfoStyle.Italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:id="@+id/review_content_2"/>
        <TextView
            style="@style/InfoStyle.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/review_author_2"/>

    </LinearLayout>
</LinearLayout>
